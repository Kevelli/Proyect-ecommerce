<!DOCTYPE HTML>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Ecommerce Template">
    <meta name="HandheldFriendly" content="True">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tecno</title>
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <!-- CSS FILES -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.5/css/bootstrap-select.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.3.0/animate.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/sidr.css" rel="stylesheet" type="text/css">
    <link href="~/css/site.css" rel="stylesheet" type="text/css">
    <!-- GOOGLE FONTS -->
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700|Roboto+Slab:400,300,700" rel="stylesheet" type="text/css">
</head>

<body id="@ViewData["BodyID"]">

    <!-- ECOMMERCE NAVIGATION -->
    <div id="ecommerce-navigation" class="hidden-xs hidden-sm">
        <div class="container">
            <div class="schedule">
                <p>Horario:<span>8:00AM - 7:00PM</span><i class="glyphicon glyphicon-time"></i></p>
            </div>
            <partial name="_LoginState" />
        </div>
    </div>

    <!-- MOBILE NAVBAR -->
    <nav id="mobile-navbar" class="visible-xs visible-sm">
        <div class="container">
            <ul class="right-icon nav" id="right-menu">
                <li><a href="#"><i class="glyphicon glyphicon-shopping-cart"></i></a></li>
            </ul>
            <ul class="nav title">
                <li>
                    <a href="/">Tecno</a>
                </li>
            </ul>
            <ul class="left-icon nav" id="left-menu">
                <li><a href="#"><i class="glyphicon glyphicon-menu-hamburger"></i></a></li>
            </ul>
        </div>
    </nav>

    <!-- MOBILE SIDEBARS -->
    <div id="sidr-menu-right">
        <ul>
            <li>
                <p class="title">Detalle carrito</p>
            </li>
            <li>
                <a href="#" class="cart-item">
                    <div class="row">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <img src="~/images/product1.png" alt="Image Product">
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 product-info">
                            <p>Apple Macbook Pro 4k Ultimate Edition</p>
                            <p class="price">$300.0</p>
                        </div>
                    </div>
                </a>
            </li>
            <li>
                <a href="#" class="cart-item">
                    <div class="row">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <img src="~/images/product1.png" alt="Image Product">
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 product-info">
                            <p>Apple Iphone 6 Plus Starter Edition</p>
                            <p class="price">$300.0</p>
                        </div>
                    </div>
                </a>
            </li>
        </ul>
        <div class="cart-check">
            <a href="#" class="btn btn-default btn-block">Ver carrito</a>
            <a href="#" class="btn btn-default btn-block">Checkout</a>
        </div>
    </div>
    <div id="sidr-menu-left">
        <ul>
            <li>
                <p class="title">Navegacion</p>
            </li>
            <li><a href="#">Home</a></li>
            <li><a href="#">Promociones</a></li>
            <li><a href="#">Ofertas</a></li>
            <li><a href="#">Tienda</a></li>
            <li><a href="#">Acerca de nosotros</a></li>
            <li><a href="#">Contactanos</a></li>
            <li>
                <div class="schedule">
                    <p>Horario:<span>8:00AM - 7:00PM</span><i class="glyphicon glyphicon-time"></i></p>
                </div>
            </li>
        </ul>
    </div>

    <!-- HEADER -->
    <div id="header">
        <div class="container">
            <div class="row">
                <a href="/" class="col-xs-8 col-sm-6 col-xs-offset-2 col-sm-offset-3 col-md-offset-0 col-lg-offset-0 col-md-3 col-lg-3 header-col">
                    <img src="~/images/logo.png" alt="Ecommerce Logo">
                </a>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 header-col">
                    <form>
                        <select class="form-control" data-live-search="true" title="Categories">
                            <option value="">Computadoras</option>
                            <option value="">Smartphones</option>
                            <option value="">Printers</option>
                            <option value="">Software</option>
                        </select>
                        <input type="search" placeholder="Buscar..." class="form-control search-field">
                        <button type="submit" class="btn btn-default search-btn">Buscar</button>
                    </form>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 header-col hidden-xs hidden-sm" id="shopping-cart">
                    <div class="dropdown">
                        <a id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="glyphicon glyphicon-chevron-down"></i>
                            <div class="shopping-cart-info">
                                <p>Articulos: <span>2</span></p>
                                <p>Precio: <span>$900.0</span></p>
                            </div>
                            <img src="~/images/bag.svg" alt="Bag Icon" class="shopping-cart-icon">
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dLabel">
                            <li>
                                <p class="title">Detalle carrito</p>
                            </li>
                            <li>
                                <a href="#" class="cart-item">
                                    <div class="row">
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                            <img src="~/images/product1.png" alt="Image Product">
                                        </div>
                                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 product-info">
                                            <p>Apple Macbook Pro 4k Ultimate Edition</p>
                                            <p class="price">$300.0</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="cart-item">
                                    <div class="row">
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                            <img src="~/images/product1.png" alt="Image Product">
                                        </div>
                                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 product-info">
                                            <p>Apple Iphone 6 Plus Starter Edition</p>
                                            <p class="price">$300.0</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li class="cart-check">
                                <a href="#" class="btn btn-default">Ver carrito</a>
                                <a href="#" class="pull-right btn btn-default">Checkout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- NAVBAR -->
    <nav class="navbar navbar-default hidden-xs hidden-sm" id="ecommerce-navbar">
        <div class="container">
            <div class="row">
                <div class="collapse navbar-collapse" id="navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Promociones</a></li>
                        <li><a href="#">Ofertas</a></li>
                        <li><a href="#">Tienda</a></li>
                        <li><a href="#">Acerca de nosotros</a></li>
                        <li><a href="#">Contactanos</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container">
        <div class="row">
             @RenderBody()
        </div>
    </div>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-lg-offset-0 col-md-offset-0 col-sm-6 col-sm-offset-0 col-md-6 col-lg-3" id="about-us">
                    <img src="images/logo-white.png" alt="Website Logo">
                    <p>Veniam officia exercitation, veniam ita cernantur ad eu aliqua aut magna ne offendit summis iudicem quamquam. Ita dolore nisi ex arbitror et si ubi.</p>
                    <a href="#" class="btn btn-default">Leer mas</a>
                </div>
                <div class="col-xs-10 col-xs-offset-1 col-lg-offset-0 col-md-offset-0 col-sm-offset-0 col-sm-6 col-md-6 col-lg-2 links">
                    <h5>Informacion</h5>
                    <ul class="nav nav-stacked">
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Acerca de nosotros</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Privacy Police</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Terms & Condition</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Atencion al cliente</a></li>
                    </ul>
                </div>
                <div class="col-xs-10 col-xs-offset-1 col-lg-offset-0 col-md-offset-0 col-sm-offset-0 col-sm-6 col-md-6 col-lg-2 links">
                    <h5>Links utiles</h5>
                    <ul class="nav nav-stacked">
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Catalogo</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Promociones</a></li>
                    </ul>
                </div>
                <div class="col-xs-10 col-xs-offset-1 col-lg-offset-0 col-md-offset-0 col-sm-offset-0 col-sm-6 col-md-6 col-lg-2 links">
                    <h5>Mi cuenta</h5>
                    <ul class="nav nav-stacked">
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Mi cuenta</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Login</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Registrarse</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Checkout</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i>Pago</a></li>
                    </ul>
                </div>
                <div class="col-xs-10 col-xs-offset-1 col-lg-offset-0 col-md-offset-0 col-sm-offset-0 col-sm-6 col-md-6 col-lg-3" id="contact-us">
                    <h5>Contactanos</h5>
                    <ul class="nav nav-stacked">
                        <li>
                            <p><i class="glyphicon glyphicon-map-marker"></i>Managua, Nicaragua</p>
                        </li>
                        <li>
                            <p><i class="glyphicon glyphicon-earphone"></i>+505 - 1234 - 5678</p>
                        </li>
                        <li>
                            <p><i class="glyphicon glyphicon-envelope"></i>sales@axiom.com</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- RIGHTS / CREDITS -->
    <div id="rights">
        <div class="container">
            <p>CopyRight <i class="glyphicon glyphicon-copyright-mark"></i> 2022.</p>
        </div>
    </div>

    <!-- JAVASCRIPT FILES -->
    <script src="//code.jquery.com/jquery-1.11.3.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.5/js/bootstrap-select.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.sidr.min.js" type="text/javascript"></script>
    <script src="~/js/scroll.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>